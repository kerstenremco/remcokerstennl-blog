---
import { NavBar, Contact } from "../components";
import './style.css';
---

<html lang="en" data-theme="dracula">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="English" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content={Astro.props.title} />
    <meta name="title" content={Astro.props.title} />
    {Astro.props.seoDesc && <meta name="description" content={Astro.props.seoDesc} />}
    {Astro.props.seoKeywords && <meta name="keywords" content={Astro.props.seoKeywords} />}
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Remco Kersten" />
	{Astro.props.image && <meta property="og:image" content={Astro.props.image} />}
	{Astro.props.image && <meta property="og:image:type" content="image/png" />}
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <script defer data-domain="remcokersten.nl" src="https://plausible.kersten-it.nl/js/script.js"></script>

    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100..1000;1,9..40,100..1000&family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <title>{Astro.props.title}</title>
    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        const theme = localStorage.getItem("theme");
        if (theme === null) {
          document.documentElement.setAttribute("data-theme", "dracula");
        } else {
          document.documentElement.setAttribute("data-theme", theme);
          if (theme === "emerald") document.getElementById("theme-switch").checked = true;
        }
      });
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
    </script>
  </head>
  <body class="xl:max-w-screen-xl mx-auto mb-24 px-4">
    <NavBar client:load />
    <Contact client:load />
    <div class="xl:mt-20">
      <slot />
    </div>
  </body>
</html>

<script>
  import box from "boxicons/dist/boxicons.js";
</script>
